@model List<string>

@{
    ViewData["Title"] = "Select Preferences";
    var userPreferences = (List<string>)ViewBag.UserPreferences ?? new List<string>();
}

<h2>Select Your Preferences</h2>

<form method="post" asp-action="SavePreferences">
    <div>
        @foreach (var tag in Model)
        {
            <div>
                <input type="checkbox" name="selectedTags" value="@tag" id="@tag"
                @(userPreferences.Contains(tag) ? "checked" : "") />
                <label for="@tag">@tag</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Preferences</button>
</form>
